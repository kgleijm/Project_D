@model Tuple<List<project_D.Models.Department>, List<project_D.Models.Data>, project_D.Models.Data, bool, project_D.Models.Department>;
@{
    ViewData["Title"] = "Admin Page";
}

@if (Model.Item4)
{
    <div>
        <div class="row">
            <div class="col-sm-12 my-4">
                JE ZIT NU OP HET TOTAAL SCHERM
                <form>
                    <table>
                        <tr>
                            <th>Dag</th>
                            <th>Energieverbruik</th>
                            <th>Gasverbruik</th>
                            <th>Opgewekte energie</th>
                        </tr>
                        @foreach (var data in Model.Item2)
                        {
                            //show al data
                            <tr>
                                <td>@data.Date</td>
                                <td>@data.EnergyConsumption</td>
                                <td>@data.GasConsumption</td>
                                <td>@data.EnergyGenerated + <input type="number" step="0.1" placeholder="10"/></td>
                            </tr>
                        }
                    <tr>
                        <th rowspan="1">Totaal:</th>
                        <td>@Model.Item3.EnergyConsumption</td>
                        <td>@Model.Item3.GasConsumption</td>
                        <td>@Model.Item3.EnergyGenerated</td>
                    </tr>
                    </table>
                    <button type="submit">Opslaan</button>
                </form>
                <button href="">Export</button>
                <br>
                <br>
                <br>
                <br>
                <br>
                <p class="text-center">
                    Departments
                    <br> <a href="/Admin">Totaal</a>
                    @foreach (var department in Model.Item1)
                    {
                        string link = "/Admin/" + department.DepartmentID;
                        <br> <a href=@link>@(department.Name) met id: @(department.DepartmentID) </a>
                    }
                </p>
            </div>
        </div>
    </div>
} else
{
    <div>
        <div class="row">
            <div class="col-sm-12 my-4">
                JE ZIT NU OP HET SCHERM VAN: @Model.Item5.Name
                <form>
                    <table>
                        <tr>
                            <th>Dag</th>
                            <th>Energieverbruik</th>
                            <th>Gasverbruik</th>
                        </tr>
                        @foreach (var data in Model.Item2)
                        {
                            //show al data
                            <tr>
                                <td>@data.Date</td>
                                <td>@data.EnergyConsumption + <input type="number" step="0.1" placeholder="10"/></td>
                                <td>@data.GasConsumption + <input type="number" step="0.1" placeholder="10"/></td>
                            </tr>
                        }
                        <tr>
                            <th rowspan="1">Totaal:</th>
                            <td>@Model.Item3.EnergyConsumption</td>
                            <td>@Model.Item3.GasConsumption</td>
                        </tr>
                    </table>
                    <button type="submit">Opslaan</button>
                </form>
                <button href="">Export</button>
                <br>
                <br>
                <br>
                <br>
                <br>
                <p class="text-center">
                    Departments
                    <br> <a href="/Admin">Totaal</a>
                    @foreach (var department in Model.Item1)
                    {
                        string link = "/Admin/" + department.DepartmentID;
                        <br> <a href=@link>@(department.Name) met id: @(department.DepartmentID) </a>
                    }
                </p>
            </div>
        </div>
    </div>
}
